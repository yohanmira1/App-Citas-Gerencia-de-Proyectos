<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">

  <h1 class="text-center text-3xl font-bold">Ingresar datos de usuario</h1>

  <form action="" method="POST" class="mt-4">

    <input type="int" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="Cedula Usuario" name="ID">

    <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="Nombres Usuario" name="Nombres">

    <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="Apellidos Usuario" name="Apellidos">

    <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="Telefono Usuario" name="Telefono">

    <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="Direccion Usuario" name="Direccion">      



    <button type="submit" class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3
      hover:bg-green-600 focus:bg-green-700">Guardar</button>

  </form>

</div>